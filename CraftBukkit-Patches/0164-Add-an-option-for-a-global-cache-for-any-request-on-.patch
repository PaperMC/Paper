+            Bukkit.getLogger().info( "Global API cache enabled - All requests to Mojang's API will be " +
+                    "handled by Spigot" );
+            CachedStreamHandlerFactory.isSet = true;
+            URL.setURLStreamHandlerFactory(new CachedStreamHandlerFactory());
+        }
+    }
 }
