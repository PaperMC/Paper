+                }
+                this.originWorldId = originWorld == null ? null : originWorld.getUID();
+                origin = new org.bukkit.Location(originWorld, originTag.getDoubleAt(0), originTag.getDoubleAt(1), originTag.getDoubleAt(2));
+            }
+            // Paper end
