@@ -0,0 +0,0 @@ public class EntityFishingHook extends Entity {
 
             this.setMot(this.getMot().a(0.92D));
             this.Z();
+
+            // Paper start - These shouldn't be going through portals
+            if (this.inPortal()) {
+                this.die();
+            }
+            // Paper end
         }
     }
 
