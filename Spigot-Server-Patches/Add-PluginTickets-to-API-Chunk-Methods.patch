     public Chunk getChunkAt(int x, int z) {
+        world.getChunkProvider().addTicket(TicketType.PLUGIN, new ChunkCoordIntPair(x, z), 0, Unit.INSTANCE); // Paper
         return this.world.getChunkProvider().getChunkAt(x, z, true).bukkitChunk;
