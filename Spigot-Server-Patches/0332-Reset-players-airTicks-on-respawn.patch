@@ -2322,6 +2322,7 @@ public abstract class Entity implements INamableTileEntity, ICommandListener, Ke
 
     }
 
+    public int getMaxAirTicks() { return bp(); } // Paper - OBFHELPER
     public int bp() {
         return 300;
     }
