+    public static final class ChunkData {
+
+        public NBTTagCompound poiData;
+        public NBTTagCompound chunkData;
+
+        public ChunkData() {}
+
+        public ChunkData(final NBTTagCompound poiData, final NBTTagCompound chunkData) {
