+        synchronized (this.urgentNeighbors) {
+            urgentNeighbors = new java.util.ArrayList<>(this.urgentNeighbors);
+            this.urgentNeighbors.clear();
+        }
+        for (PlayerChunk urgentNeighbor : urgentNeighbors) {
+            if (urgentNeighbor != null) {
