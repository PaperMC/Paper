@@ -207,7 +207,7 @@ public class EntityFishingHook extends Entity {
                 // Paper end
 
                 if (movingobjectposition != null) {
-                    org.bukkit.craftbukkit.event.CraftEventFactory.callProjectileHitEvent(this); // Craftbukkit - Call event
