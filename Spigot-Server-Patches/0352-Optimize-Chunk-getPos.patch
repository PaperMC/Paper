         // CraftBukkit start
         this.bukkitChunk = new org.bukkit.craftbukkit.CraftChunk(this);
         this.chunkKey = ChunkCoordIntPair.a(this.locX, this.locZ);
+        this.chunkCoords = new ChunkCoordIntPair(this.locX, this.locZ); // Paper
