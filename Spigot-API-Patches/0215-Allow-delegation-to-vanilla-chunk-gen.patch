diff --git a/src/main/java/org/bukkit/Bukkit.java b/src/main/java/org/bukkit/Bukkit.java
index 643b006351967c667dad2a9f3780fa9a4830342e..47ce4f1d894397d3e3f5d9997b3e000b8b84d47d 100644
