diff --git a/src/main/java/org/bukkit/Bukkit.java b/src/main/java/org/bukkit/Bukkit.java
index 85ac944835bdc9c2b3837f40b094eea013b61e8f..e5723bbbabefb81a5a05d360585f3ea86f2df3b0 100644
