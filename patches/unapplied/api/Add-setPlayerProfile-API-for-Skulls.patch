+++ b/src/main/java/org/bukkit/inventory/meta/SkullMeta.java
@@ -0,0 +0,0 @@ public interface SkullMeta extends ItemMeta {
     @Deprecated
     boolean setOwner(@Nullable String owner);
 
+    // Paper start
