+package io.papermc.paper.plugin.lifecycle.event;
+
+import io.papermc.paper.plugin.bootstrap.BootstrapContext;
+import io.papermc.paper.plugin.lifecycle.LifecycleEvent;
+import java.util.ArrayList;
+import java.util.List;
+import org.bukkit.plugin.Plugin;
+import org.jetbrains.annotations.ApiStatus;
+
+@ApiStatus.Experimental
+public final class LifecycleEvents {
+
+    static final List<LifecycleEventType<?, ?>> LIFECYCLE_EVENT_TYPES = new ArrayList<>();
+
+    @ApiStatus.Internal
+    private static <E extends LifecycleEvent> LifecycleEventType<Plugin, E> plugin(final String name) {
+        return simple(name, Plugin.class);
+    }
+
+    @ApiStatus.Internal
+    private static <E extends LifecycleEvent> LifecycleEventType.Prioritized<Plugin, E> pluginPrioritized(final String name) {
+        return prioritized(name, Plugin.class);
+    }
+
+    @ApiStatus.Internal
+    private static <E extends LifecycleEvent> LifecycleEventType<BootstrapContext, E> bootstrap(final String name) {
+        return simple(name, BootstrapContext.class);
+    }
+
+    @ApiStatus.Internal
+    private static <E extends LifecycleEvent> LifecycleEventType.Prioritized<BootstrapContext, E> bootstrapPrioritized(final String name) {
+        return prioritized(name, BootstrapContext.class);
+    }
+
+    @ApiStatus.Internal
+    private static <O extends LifecycleEventOwner, E extends LifecycleEvent, O2 extends O> LifecycleEventType<O, E> simple(final String name, final Class<O2> ownerType) {
+        final LifecycleEventType<O, E> lifecycleEventType = LifecycleEventTypeProvider.PROVIDER.simple(name, ownerType);
+        LIFECYCLE_EVENT_TYPES.add(lifecycleEventType);
+        return lifecycleEventType;
+    }
+
+    @ApiStatus.Internal
+    private static <O extends LifecycleEventOwner, E extends LifecycleEvent> LifecycleEventType.Prioritized<O, E> prioritized(final String name, final Class<? extends O> ownerType) {
+        final LifecycleEventType.Prioritized<O, E> lifecycleEventType = LifecycleEventTypeProvider.PROVIDER.prioritized(name, ownerType);
+        LIFECYCLE_EVENT_TYPES.add(lifecycleEventType);
+        return lifecycleEventType;
+    }
+
+    private LifecycleEvents() {
+    }
+}
