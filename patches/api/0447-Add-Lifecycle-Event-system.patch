+package io.papermc.paper.plugin.lifecycle.event;
+
+import io.papermc.paper.plugin.lifecycle.LifecycleEvent;
+import org.jetbrains.annotations.ApiStatus;
+import org.jetbrains.annotations.NotNull;
+
+/**
+ * Manages a plugin's lifecycle events. Can be obtainable
+ * from {@link org.bukkit.plugin.Plugin} or {@link io.papermc.paper.plugin.bootstrap.BootstrapContext}.
+ *
+ * @param <O> the owning type, {@link org.bukkit.plugin.Plugin} or {@link io.papermc.paper.plugin.bootstrap.BootstrapContext}
+ */
+@ApiStatus.Experimental
+@ApiStatus.NonExtendable
+public interface LifecycleEventManager<O extends LifecycleEventOwner> {
+
+    /**
+     * Registers a handler for a lifecycle event. If the event accepts priorities, the priority will
+     * be undefined.
+     *
+     * @param eventType the lifecycle event type from {@link LifecycleEvents}
+     * @param eventHandler the event handler
+     * @param <E> the event object type
+     * @param <T> the event type
+     */
+    <E extends LifecycleEvent, T extends LifecycleEventType<? super O, E>> void registerEventHandler(final @NotNull T eventType, final @NotNull LifecycleEventHandler<? super E> eventHandler);
+
+    /**
+     * Registers a handler for a lifecycle event which will always run after all non-monitor handlers.
+     * This is intended for plugins that don't mutate any state, but want monitor or observe the final results
+     * or some lifecycle event.
+     *
+     * @param eventType the lifecycle event type from {@link LifecycleEvents}
+     * @param eventHandler the event handler
+     * @param <E> the event object type
+     * @param <T> the event type
+     */
+    <E extends LifecycleEvent, T extends LifecycleEventType<? super O, E>> void registerMonitorEventHandler(final @NotNull T eventType, final @NotNull LifecycleEventHandler<? super E> eventHandler);
+
+    /**
+     * Registers a prioritized handler for a lifecycle event.
+     *
+     * @param eventType the lifecycle event type from {@link LifecycleEvents}
+     * @param eventHandler the event handler
+     * @param priority the handler's priority, a lower number will run earlier
+     * @param <E> the event object type
+     * @param <T> the event type
+     */
+    <E extends LifecycleEvent, T extends LifecycleEventType.Prioritized<? super O, E>> void registerPrioritizedEventHandler(final @NotNull T eventType, final @NotNull LifecycleEventHandler<? super E> eventHandler, int priority);
+}
