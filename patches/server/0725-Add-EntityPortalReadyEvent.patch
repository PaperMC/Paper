         ResourceKey<Level> resourcekey = world.getTypeKey() == LevelStem.NETHER ? Level.OVERWORLD : Level.NETHER;
         ServerLevel worldserver1 = world.getServer().getLevel(resourcekey);
+        // Paper start - Add EntityPortalReadyEvent
