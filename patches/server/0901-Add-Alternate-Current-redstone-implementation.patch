+    /**
+     * Queue the given wire for the breadth-first search as a root.
+     */
+    private void searchRoot(WireNode wire) {
+        int iBackupFlowDir;
+
+        if (wire.connections.iFlowDir < 0) {
+            iBackupFlowDir = 0;
+        } else {
+            iBackupFlowDir = wire.connections.iFlowDir;
+        }
