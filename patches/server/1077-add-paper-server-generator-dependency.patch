diff --git a/build.gradle.kts b/build.gradle.kts
index 2da91ed6363c0851e4c459188f5e8ef5475e0c97..646179808a416e9ea15b8d79c7afa4bd21fa84bd 100644
--- a/build.gradle.kts
+++ b/build.gradle.kts
@@ -4,6 +4,7 @@ import java.time.Instant
 plugins {
     java
     `maven-publish`
+    idea // Paper
 }
 
 val log4jPlugins = sourceSets.create("log4jPlugins")
@@ -83,6 +84,22 @@ dependencies {
     // Paper end - spark
 }
 
+// Paper start
+val generatedServerPath: java.nio.file.Path = rootProject.projectDir.toPath().resolve("paper-server-generator/generated")
